<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_prime_delivery">
        <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
            <div class="header">
                <div class="row">
                    <div class="col-xs-3 mb4">
                        <img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(doc.company_id.logo)" style="max-height: 45px;"/>
                    </div>
                </div>
            </div>
            <div class="article o_report_layout_standard">
                <div class="page">
                    <div class="row">
                        <div class="col-6">
                            <h3>
                                <span t-field="doc.name"/>
                            </h3>
                        </div>
                        <div class="col-6">
                                    Fecha:
                            <span t-esc="time.strftime('%Y-%m-%d')" t-options="{'widget': 'date'}"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-6">
                            <span>
                                <strong>Remitente:</strong>
                            </span>
                            <div t-field="doc.picking_type_id.warehouse_id.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True}"/>
                            <div class="row">
                                <span class="col-6">Contacto</span>
                                <span class="col-6" t-field="doc.picking_type_id.contact_id.name"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Telefono</span>
                                <span class="col-6" t-field="doc.picking_type_id.contact_id.phone"/>
                            </div>
                        </div>
                        <div class="col-6">
                            <span>
                                <strong>Destinatario:</strong>
                            </span>
                            <div t-field="doc.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True}"/>
                            <div class="row">
                                <span class="col-6">Contacto</span>
                                <t t-if="'contact_partner_id' in doc">
                                    <span class="col-6" t-field="doc.sale_id.contact_partner_id.name"/>
                                </t>
                            </div>
                            <div class="row">
                                <span class="col-6">Telefono</span>
                                <t t-if="'contact_partner_id' in doc">
                                    <span class="col-6" t-field="doc.sale_id.contact_partner_id.phone"/>
                                </t>
                            </div>
                            <div class="row">
                                <span class="col-6">Notas</span>
                                <span class="col-6" t-field="doc.partner_id.comment"/>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <t t-if="doc.carrier_tracking_ref">
                        <div class="row">
                            <div class="col-6 ">
                                <strong>Referencia de Envio</strong>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <span t-field="doc.carrier_tracking_ref"/>
                            </div>
                        </div>
                    </t>
                    <div class="mb32 row">
                        <div class="col-6 pull-left">
                            <div class="row">
                                <span class="col-6">No. Pedido:</span>
                                <span class="col-6" t-field="doc.sale_id.name"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Cliente:</span>
                                <span class="col-6" t-field="doc.sale_id.partner_id.name"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Comercial:</span>
                                <span class="col-6" t-field="doc.sale_id.user_id.name"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Oportunidad:</span>
                                <span class="col-6" t-field="doc.sale_id.opportunity_id.name"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Tipo de entrega:</span>
                                <span class="col-6" t-field="doc.sale_id.shipping_type_id.name"/>
                            </div>
                        </div>
                        <div class="col-6 pull-right">
                            <div class="row">
                                <span class="col-6">Fecha Confirmacion:</span>
                                <span class="col-6" t-field="doc.sale_id.date_order"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Pago de Flete:</span>
                                <span class="col-6" t-field="doc.sale_id.shipping_payer_id.name"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Metodo de Envio:</span>
                                <span class="col-6" t-field="doc.carrier_id.name"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Orden de Compra:</span>
                                <span class="col-6" t-field="doc.sale_id.client_order_ref"/>
                            </div>
                            <div class="row">
                                <span class="col-6">Almacen:</span>
                                <span class="col-6" t-field="doc.picking_type_id.warehouse_id.name"/>
                            </div>
                        </div>
                    </div>
                    <t t-set="partida" t-value="0"/>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Partida</th>
                                <th>Producto</th>
                                <th>Lote/Numero de serie</th>
                                <th>Entrega</th>
                                <th>Fecha Entrega</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.move_line_ids" t-as="line">
                                <t t-set="partida" t-value="partida+1"/>
                                <td>
                                    <span t-esc="partida"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id.display_name"/>
                                </td>
                                <td>
                                    <span t-field="line.lot_id.name"/>
                                </td>
                                <td>
                                    <span t-field="line.qty_done"/>
                                </td>
                                <td>
                                    <span t-field="line.picking_id.scheduled_date"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <span class="col-6">
                            <strong>Notas de Salida</strong>
                        </span>
                        <span class="col-6" t-field="doc.sale_id.shipping_notes"/>
                    </div>
                </div>
                
            </div>
        </t>
        </t>
    </template>
</odoo>
