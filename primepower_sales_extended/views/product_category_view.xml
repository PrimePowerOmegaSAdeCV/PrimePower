<odoo>
    <data>
        <record id="view_product_category_sale_product_template_inherit_form" model="ir.ui.view">
            <field name="name">view.product.category.sale.product.template.inherit.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='removal_strategy_id']" position="after">
                    <field name="sale_template_id"/>
                    <field name="show_partner_values"/>
                  </xpath>
            </field>
        </record>
    </data>
</odoo>
