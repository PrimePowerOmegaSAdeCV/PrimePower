<odoo>
    <data>
        <record id="view_product_product_sale_product_template_inherit_form" model="ir.ui.view">
            <field name="name">view.product.product.sale.product.template.inherit.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="company_id" position="before">
                    <field name="sale_template_id"/>
                </field>
                <notebook position="inside">
                    <page string="Fabricacion">
                        <field name="default_template_ids" string="Detalles" nolabel="1">
                            <tree string="Detalles de produccion" editable="top">
                                <field name="name" string="Nombre"/>
                                <field name="values" string="Valores"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
