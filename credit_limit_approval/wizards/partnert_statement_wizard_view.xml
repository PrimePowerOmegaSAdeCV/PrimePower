<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="credit_limit_alert_partner_statement_wizard_view">
        <field name="name">Generador de reportes</field>
        <field name="model">credit_limit_alert.partner_statement_wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="partner_id" readonly="True"/>
                    <field name="sale_id" readonly="True"/>
                  <!--  <field name="credit_available" readonly="True"/>-->
                </group>
                <div>
                   <h3>
                     El Credito disponible del cliente supera el credito establecido, se requiere aprobacion del departamente de Credito. Favor de enviar solicitud del pedido de venta.
                   </h3>
                </div>
                <footer>
                    <button string='Enviar Solicitud' name="send_for_approval" type="object" class="oe_highlight"/>
                     or
                    <button string="Cancel" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="credit_limit_alert_wizard_action" model="ir.actions.act_window">
        <field name="name">Estados de cuenta de clientes</field>
        <field name="res_model">credit_limit_alert.partner_statement_wizard</field>
        <field name="view_mode">form</field>
       <field name="view_id" ref="credit_limit_alert_partner_statement_wizard_view"/>
       <field name="target">new</field>
    </record>
    </data>
</openerp>